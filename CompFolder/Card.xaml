<UserControl x:Class="Mataju.CompFolder.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mataju.CompFolder"
             xmlns:vm="clr-namespace:Mataju.VMFolder"
             xmlns:v="clr-namespace:Mataju.ViewFolder"
             mc:Ignorable="d" 
             d:DesignHeight="273"
             d:DesignWidth="210">

    <Grid Height="260" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image  Stretch="UniformToFill"  Grid.RowSpan="2"/>

        <Image Source="{Binding ImgPath}" Stretch="UniformToFill" Margin="0,0,1,86" Grid.RowSpan="2"/>
        
        <StackPanel Grid.Row="1" Margin="0,48,0,0" Background="LightGray">

            <TextBlock FontWeight="Bold" FontSize="18px" Text="{Binding HouseId }"/>

            <TextBlock Text="{Binding HouseAdd}" TextWrapping="Wrap" Height="19" />
        </StackPanel>

        </Grid>

</UserControl>
